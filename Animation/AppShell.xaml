<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Animation"
       x:Class="Animation.AppShell"
       BackgroundColor="{StaticResource BackgroundColor}">
    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:HomePage}" />
    <ShellContent Title="Details" ContentTemplate="{DataTemplate local:DetailsPage}" />
    <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
    <ShellContent Title="About" ContentTemplate="{DataTemplate local:AboutPage}" />
</Shell>
